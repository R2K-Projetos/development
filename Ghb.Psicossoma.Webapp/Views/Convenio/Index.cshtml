@model IEnumerable<ConvenioViewModel>

@{
    var controllerName = "Convenio";
    ViewData["Title"] = "Consulta: Convênios";

    var colorAtivo = "";
}
<div class="row justify-content-center">
    <div class="col-xxl-4 col-xl-5 col-lg-6 col-md-8 col-sm-12 col-xs-12">
        <form asp-action="Index" method="get">
            <input type="hidden" name="pageSize" id="pageSize" value="10" />
            <div class="row bg-light border border-secondary rounded g-1 mt-1 p-2">
                <partial name="~/Views/Shared/_headerForm.cshtml" />
                <div class="col-12">
                    <label for="PlanoSaude" class="form-label">Plano de Saúde</label>
                    <input name="PlanoSaude" id="PlanoSaude" class="form-control form-control-sm" />
                </div>
                <div class="col-4">
                    &nbsp;
                </div>
                <div class="col-4 text-center">
                    <button type="submit" class="btn btn-secondary btn-sm">Consultar</button>
                </div>
                <div class="col-4">
                    <div class="pt-2 ComboPaginacao">
                        &nbsp;
                    </div>
                </div>
            </div>
        </form>
    </div>
    @if (ViewBag.TotalEncontrado > 0)
    {
        <div class="pt-2">
            <table class="table table-md table-light table-striped table-fit table-hover caption-top border border-tables">
                <caption class="totalListagem">Total encontrado: <b>@ViewBag.TotalEncontrado</b></caption>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.PlanoSaude)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.PlanoConvenio)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.ProdutoConvenio)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Identificacao)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Acomodacao)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Cns)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Cobertura)</th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Ativo)</th>
                    </tr>
                </thead>
                <tbody class="linkLinha">
                    @foreach (var item in Model)
                    {
                        <tr onclick="CallAction('@controllerName', 'Edit', '@item.Id');">
                            <td scope="row">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td class="text-start">
                                @Html.DisplayFor(modelItem => item.PlanoSaude)
                            </td>
                            <td class="text-start">
                                @Html.DisplayFor(modelItem => item.PlanoConvenio)
                            </td>
                            <td class="text-start">
                                @Html.DisplayFor(modelItem => item.ProdutoConvenio)
                            </td>
                            <td class="text-start">
                                @Html.DisplayFor(modelItem => item.Identificacao)
                            </td>
                            <td class="text-start">
                                @Html.DisplayFor(modelItem => item.Acomodacao)
                            </td>
                            <td class="text-start">
                                @Html.DisplayFor(modelItem => item.Cns)
                            </td>
                            <td class="text-start">
                                @Html.DisplayFor(modelItem => item.Cobertura)
                            </td>
                            <td class="text-center">
                                @if (item.Ativo)
                                    colorAtivo = "green";
                                else
                                    colorAtivo = "lightGray";

                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="@colorAtivo" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                </svg>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="9" class="pt-1"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <partial name="~/Views/Shared/_CardSemResultado.html" />
    }
</div>