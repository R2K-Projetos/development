@model ProfissionalViewModel

@{
    var controllerName = "Profissional";
    ViewData["Title"] = "Atualizar: Profissional";

    var statusAtivo = @Model.Ativo ? "checked" : "";
    var colorPrincipal = "";
    var colorAtivo = "";

    var UFId = Model.Endereco.UFId.ToString();
    var CidadeId = Model.Endereco.CidadeId.ToString();
}
<div class="container">
    <div class="row justify-content-center py-1">
        <div class="col-xxl-6 col-xl-7 col-lg-8 col-md-10 col-sm-12 col-xs-12">
            <form id="formProfissional" asp-controller="Profissional" asp-action="Edit" method="post">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.PessoaId)
                <div class="card">
                    <div class="card-body shadow">
                        <div class="row">
                            <partial name="~/Views/Shared/_headerForm.cshtml" />
                        </div>
                        <div class="row pt-2">
                            <div class="cod-12">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <button class="nav-link active" id="nav-dadosPrincipais-tab" data-bs-toggle="tab" data-bs-target="#nav-dadosPrincipais" type="button" role="tab" aria-controls="nav-dadosPrincipais" aria-selected="true" onclick="TipoAbaControlProfissional('prin');">Dados Principais</button>
                                        <button class="nav-link" id="nav-endereco-tab" data-bs-toggle="tab" data-bs-target="#nav-endereco" type="button" role="tab" aria-controls="nav-endereco" aria-selected="false" onclick="TipoAbaControlProfissional('end');">Endereço</button>
                                        <button class="nav-link" id="nav-telefone-tab" data-bs-toggle="tab" data-bs-target="#nav-telefone" type="button" role="tab" aria-controls="nav-telefone" aria-selected="false" onclick="TipoAbaControlProfissional('tel');">Telefone</button>
                                        <button class="nav-link" id="nav-especialidade-tab" data-bs-toggle="tab" data-bs-target="#nav-especialidade" type="button" role="tab" aria-controls="nav-especialidade" aria-selected="false" onclick="TipoAbaControlProfissional('esp');">Especialidades</button>
                                    </div>
                                </nav>
                                <div class="tab-content mb-3" id="nav-tabContent">
                                    <!--dadosPrincipais-->
                                    <div class="tab-pane fade border border-secondary-subtle border-top-0 rounded-bottom show active" id="nav-dadosPrincipais" role="tabpanel" aria-labelledby="nav-dadosPrincipais-tab">
                                        <div class="row p-2">
                                            <div id="alertaPadrao" class="alert alert-danger print-error-msg" style="display:none">
                                                <span></span>
                                                <div class="float-end">
                                                    <button type="button" id="closeBtn" class="btn-close" onclick="HideAlert();"></button>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
                                                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control form-control-sm" })
                                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-3">
                                                @Html.LabelFor(model => model.Cpf, new { @class = "form-label" })
                                                @Html.TextBoxFor(model => model.Cpf, new { @class = "form-control form-control-sm cpf" })
                                                @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-3">
                                                @Html.LabelFor(model => model.Sexo, new { @class = "form-label" })
                                                @Html.DropDownListFor(model => model.Sexo, Model.OpcoesSexo, new { name = "cmbSexo", id = "cmbSexo", @class = "form-select form-select-sm" })
                                                @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-6">
                                                @Html.LabelFor(model => model.NomeReduzido, new { @class = "form-label" })
                                                @Html.TextBoxFor(model => model.NomeReduzido, new { @class = "form-control form-control-sm" })
                                                @Html.ValidationMessageFor(model => model.NomeReduzido, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-3">
                                                @Html.LabelFor(model => model.DataNascimento, new { @class = "form-label" })
                                                @Html.TextBoxFor(model => model.DataNascimento, new { type = "date", @class = "form-control form-control-sm" })
                                                @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-9">
                                                @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                                                @Html.TextBoxFor(model => model.Email, new { type = "email", @class = "form-control form-control-sm" })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-6">
                                                @Html.LabelFor(model => model.TiposRegistroProfissional, new { @class = "form-label" })
                                                @Html.DropDownListFor(model => model.RegistroProfissionalId, Model.TiposRegistroProfissional, new { name = "cmbSexo", id = "cmbSexo", @class = "form-select form-select-sm" })
                                                @Html.ValidationMessageFor(model => model.TiposRegistroProfissional, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-6">
                                                @Html.LabelFor(model => model.Numero, new { @class = "form-label" })
                                                @Html.TextBoxFor(model => model.Numero, new { @class = "form-control form-control-sm" })
                                                @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--Endereço-->
                                    <div class="tab-pane fade border border-secondary-subtle border-top-0 rounded-bottom" id="nav-endereco" role="tabpanel" aria-labelledby="nav-endereco-tab">
                                        <div class="row p-2">
                                            <div class="col-12">
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="d-inline-block">
                                                            CEP:
                                                        </div>
                                                        <div class="d-inline-block">
                                                            @Html.TextBoxFor(model => model.Endereco!.CEP, new { id = "txtCEP", name = "txtCEP", @class = "form-control form-control-sm cep", style = "width: 110px;" })
                                                            @Html.ValidationMessageFor(model => model.Endereco!.CEP, "", new { @class = "text-danger" })
                                                        </div>
                                                        <div class="d-inline-block">
                                                            <input type="button" name="btAutoCmpletar" id="btAutoCmpletar" class="btn btn-secondary btn-sm" value="Auto completar" onclick="CarregaCamposBuscaCEP(document.getElementById('txtCEP').value);" />
                                                        </div>
                                                        <div class="d-inline-block">
                                                            <div onclick="AbrirBuscaCEP();">
                                                                <img src="~/img/iconCorreios.png" alt="Busca de endere�o nos correios" style=" width: auto; height: 18px;" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-9">
                                                        @Html.LabelFor(model => model.Endereco!.Logradouro, new { @class = "form-label" })
                                                        @Html.TextBoxFor(model => model.Endereco!.Logradouro, new { @class="form-control form-control-sm" })
                                                        @Html.ValidationMessageFor(model => model.Endereco!.Logradouro, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-3">
                                                        @Html.LabelFor(model => model.Endereco!.Numero, new { @class = "form-label" })
                                                        @Html.TextBoxFor(model => model.Endereco!.Numero, new { @class = "form-control form-control-sm" })
                                                        @Html.ValidationMessageFor(model => model.Endereco!.Numero, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-6">
                                                        @Html.LabelFor(model => model.Endereco!.Complemento, new { @class = "form-label" })
                                                        @Html.TextBoxFor(model => model.Endereco!.Complemento, new { @class = "form-control form-control-sm" })
                                                        @Html.ValidationMessageFor(model => model.Endereco!.Complemento, "", new { @class = "text-danger" })
                                                    </div>
                                                    <div class="col-6">
                                                        @Html.LabelFor(model => model.Endereco!.Bairro, new { @class = "form-label" })
                                                        @Html.TextBoxFor(model => model.Endereco!.Bairro, new { @class = "form-control form-control-sm" })
                                                        @Html.ValidationMessageFor(model => model.Endereco!.Bairro, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-3">
                                                        @Html.LabelFor(model => model.Endereco!.Ufs, new { @class = "form-label" })
                                                        @Html.DropDownListFor(model => model.Endereco!.UFId, Model.Endereco!.Ufs, new { @class = "form-select form-select-sm", onchange = "CarregaListaCidadesUF(this.value)" })
                                                    </div>
                                                    <div class="col-9">
                                                        <label for="cmbCidade" class="form-label">Cidade</label>
                                                        <select name="cmbCidade" id="cmbCidade" class="form-select form-select-sm">
                                                            <option value="0">Selecione a UF</option>
                                                        </select>
                                                        @Html.ValidationMessageFor(model => model.Endereco!.CidadeId, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--Telefone-->
                                    <div class="tab-pane fade border border-secondary-subtle border-top-0 rounded-bottom" id="nav-telefone" role="tabpanel" aria-labelledby="nav-telefone-tab">
                                        <div class="row p-2">
                                            <div class="col-12">                                        
                                                <div id="listaTelefones" class="table-responsive">
                                                    <table id="tableListaTelefone" class="table table-md table-light table-striped table-hover border border-tables">
                                                        <thead>
                                                            <tr>
                                                                <th scope="col">Nome</th>
                                                                <th scope="col" class="text-center">&nbsp;</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody class="table-group-divider">
                                                            @foreach (var item in Model.TelefonesPessoa)
                                                            {
                                                                <tr>
                                                                    <td scope="row">
                                                                        @Html.DisplayFor(modelItem => item.DDDNum)
                                                                    </td>
                                                                    <td class="text-start">
                                                                        @Html.DisplayFor(modelItem => item.TipoTelefone)
                                                                    </td>
                                                                    <td class="text-center">
                                                                        @if (item.Principal)
                                                                            colorPrincipal = "green";
                                                                        else
                                                                            colorPrincipal = "lightGray";

                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="@colorPrincipal" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                                                        </svg>
                                                                    </td>
                                                                    <td class="text-center">
                                                                        @if (item.Ativo)
                                                                            colorAtivo = "green";
                                                                        else
                                                                            colorAtivo = "lightGray";

                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="@colorAtivo" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                                                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                                                                        </svg>
                                                                    </td>
                                                                    <td>
                                                                        <div class="btn btn-outline-secondary btn-icon" onclick="EditTelefone(@item.Id);">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                                                            </svg>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div id="formTelefone" class="border border-secondary rounded">
                                                    <input type="hidden" name="hdnTotalTelefonesAdicionados" id="hdnTotalTelefonesAdicionados" value="0" />
                                                    <div class="card">
                                                        <div class="card-body shadow">
                                                            <div class="card-title border-bottom border-secondary">
                                                                <div class="row">
                                                                    <div class="col-10">
                                                                        <h5>Cadastro: Telefone</h5>
                                                                    </div>
                                                                    <div class="col-2 text-end">
                                                                        <button type="button" id="closeFormTelefone" class="btn-close" onclick="FormTelefoneControl(0);"></button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="card-text">
                                                                <div id="alertaTelefone" class="alert alert-danger print-error-msg" style="display:none">
                                                                    <span></span>
                                                                    <div class="float-end">
                                                                        <button type="button" id="closeBtn" class="btn-close" onclick="HideAlert('alertaTelefone');"></button>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-6">
                                                                        @Html.LabelFor(model => model.Telefone!.DDDNum, new { @class = "form-label" })
                                                                        @Html.TextBoxFor(model => model.Telefone!.DDDNum, new { @class = "form-control form-control-sm", @onkeypress = "MaskItem(this, mphone);", @onblur = "MaskItem(this, mphone);" })
                                                                    </div>
                                                                    <div class="col-4">
                                                                        @Html.LabelFor(model => model.TiposTelefone, new { @class = "form-label" })
                                                                        @Html.DropDownListFor(model => model.TipoTelefoneId, Model.TiposTelefone, new { @class = "form-select form-select-sm" })
                                                                    </div>
                                                                    <div class="col-2 text-center pt-2">
                                                                        <div class="pt-4"></div>
                                                                        <button type="button" class="btn btn-secondary btn-sm" onclick="AddTelefone();">
                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                                                                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                                                                            </svg>
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="btnNovoTelefone" class="text-center pt-1">
                                                    <button type="button" class="btn btn-secondary btn-sm" onclick="FormTelefoneControl(1);">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" />
                                                        </svg>
                                                        Novo
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--Especialidades-->
                                    <div class="tab-pane fade border border-secondary-subtle border-top-0 rounded-bottom" id="nav-especialidade" role="tabpanel" aria-labelledby="nav-especialidade-tab">
                                        <div class="row pt-2">
                                            <div class="col-12">
                                                <div id="listaEpecialidades"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="cod-12 border-top border-dark-subtle pt-1">
                                <div class="row">
                                    <div class="col-2 text-start pt-2">
                                        <button type="button" name="btVoltar" id="btVoltar" class="btn btn-outline-secondary btn-sm" onclick="CallAction('@controllerName', 'Index');">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-columns-reverse" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd" d="M0 .5A.5.5 0 0 1 .5 0h2a.5.5 0 0 1 0 1h-2A.5.5 0 0 1 0 .5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10A.5.5 0 0 1 4 .5m-4 2A.5.5 0 0 1 .5 2h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 4h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 6h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2A.5.5 0 0 1 .5 8h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 0 1h-8a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1h-10a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5m-4 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5m4 0a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
                                            </svg>
                                        </button>
                                    </div>
                                    <div class="col-8 text-center pt-2">
                                        <div id="btnSaveFormulario">
                                            <button type="submit" class="btn btn-primary btn-sm">Alterar</button>
                                        </div>
                                    </div>
                                    <div class="col-2"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/pessoa.js" asp-append-version="true"></script>
    <script src="~/js/profissional.js" asp-append-version="true"></script>
    <script src="~/js/endereco.js" asp-append-version="true"></script>
    <script src="~/js/telefone.js" asp-append-version="true"></script>
    <script type="text/javascript">
        //=== OnLoad ===        
        $('#formTelefone').hide();
        ControlaViewTableTelefone(false);
    </script>
}