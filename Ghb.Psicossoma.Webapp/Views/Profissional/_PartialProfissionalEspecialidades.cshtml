@model List<EspecialidadeViewModel>

@{
    var classBtnCkecked = "";
}
<table class="table table-md table-light table-striped table-hover border border-tables">
    <thead>
        <tr>
            <td colspan="3" class="p-2 fw-bold">
                Especialidades
            </td>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="text-center">
                    @if (string.Equals(item.Checked, "1"))
                        classBtnCkecked = "btn-success";
                    else
                        classBtnCkecked = "btn-outline-secondary";

                    <button type="button" class="btn @classBtnCkecked btn-sm" onclick="TrataVinculoEspecialidade('@item.Id', '@item.Checked');">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
