<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Psicossoma.Webapp</title>
    <link href="~/img/favicon.png" rel="shortcut icon" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-Custom bg-Custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="areaLogoPrincipal rounded">
                        <img src="~/img/logo.png" class="img-fluid" alt="Psicossoma" />
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="" asp-action="">Agenda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="" asp-action="">Encaminhamento</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Paciente" asp-action="Index">Pacientes</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink_1" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Profissionais
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink_1">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Profissional" asp-action="Index">Listagem</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Profissional" asp-action="Create">Cadastro</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Profissional" asp-action="Especialidades">Especialidades</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Profissional" asp-action="Agenda">Agenda</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink_2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Usuários
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink_2">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Index">Listagem</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Funcionalidades">Funcionalidades</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="FuncionalidadesPerfil">Funcionalidades por Perfil</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink_3" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Cadastros Base
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink_3">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="CID" asp-action="Index">CID</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Convenio" asp-action="Index">Convênio</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Especialidade" asp-action="Index">Especialidade</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="GrupoGuia" asp-action="Index">Grupo Guia</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Logout">
                                Sair
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-door-open" viewBox="0 0 16 16">
                                    <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1"/>
                                    <path d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117M11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5M4 1.934V15h6V1.077z"/>
                                </svg>
                            </a>
                        </li>
                    </ul>
                    <div class="areaLogoEmpresa text-end">
                        <div class="areaLogoEmpresa">
                            <img src="~/img/logoHRBGradiente.png" class="img-fluid" alt="HRB Soluções" />
                        </div>                    
                        <div>
                            <i>Roger Bassani</i>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top border-secondary footer fixed-bottom">
        <div class="text-muted bg-light ps-3 py-1">
            &copy; 2024 - Psicossoma.App
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
